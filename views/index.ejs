  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function() {
      // Inicializar DataTable para libros
      $('#booksTable').DataTable({
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        },
        dom: '<"top"f>rt<"bottom"lip><"clear">',
        responsive: true
      });

      // Búsqueda global
      $('#globalSearch').on('keyup', function() {
        $('#booksTable').DataTable().search(this.value).draw();
      });

      // Cargar categorías dinámicamente
      const categories = ['Novela', 'Ciencia Ficción', 'Historia', 'Poesía', 'Biografía', 'Infantil'];
      const $container = $('#categoriesContainer');
      
      categories.forEach(category => {
        $container.append(`
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body d-flex justify-content-between align-items-center">
                <span>${category}</span>
                <div>
                  <button class="btn btn-sm btn-outline-primary me-1 edit-category">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-sm btn-outline-danger delete-category">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        `);
      });

      // Simular préstamos
      $('.btn-loan').on('click', function() {
        const bookTitle = $(this).closest('tr').find('td:eq(1)').text();
        $('#newLoanModal').modal('show');
        $('#newLoanModal .modal-title').text(`Préstamo: ${bookTitle}`);
      });
    });
  </script>
