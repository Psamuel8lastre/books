<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Biblioteca </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link rel="icon" href="images/bibiotecalogo-removebg-preview.png" type="image/x-icon">
</head>
<body>
  <div class="wrapper d-flex">
    <!-- Sidebar -->
    <div class="sidebar col-md-3 col-lg-2 p-0">
      <div class="p-4">
        <h4 class="mb-4 text-center">
          <i class="fas fa-book-open me-2"></i>Biblioteca 
        </h4>
        <hr class="bg-light opacity-25">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#">
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">
              <i class="fas fa-book me-2"></i>libros
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-exchange-alt me-2"></i>Préstamos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/autores">
              <i class="fas fa-pen-fancy me-2"></i>Autores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/editoriales">
              <i class="fas fa-building me-2"></i>Editoriales
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">
              <i class="fas fa-tags me-2"></i>Categorías
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content col-md-9 col-lg-10 p-0 bg-light">
      <!-- Top Bar -->
      <nav class="navbar navbar-expand navbar-light bg-darck shadow-sm">
        <div class="container-fluid">
          <div class="search-box ms-3 w-50">
            <i class="fas fa-search"></i>
            <input class="form-control" type="search" placeholder="Buscar libros, autores..." id="globalSearch">
          </div>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
              <a class="nav-link" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-bell"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-end">
                <h6 class="dropdown-header">Notificaciones</h6>
                <a class="dropdown-item" href="#">Préstamo vence hoy</a>
                <a class="dropdown-item" href="#">Nuevo libro añadido</a>
                <a class="dropdown-item" href="#">Solicitud de reserva</a>
              </div>
            </li>
            <li class="nav-item dropdown ms-2">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <img src="images/perfil.png" 
                     class="rounded-circle me-1" width="30" height="30">
                Samuel
              </a>
              <div class="dropdown-menu dropdown-menu-end">
                <a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Perfil</a>
                <a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Content -->
      <div class="container-fluid p-4">
        <!-- Alerta de bienvenida o error -->
        <% if (messages && (messages.success || messages.error)) { %>
          <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
            <div class="d-flex align-items-center">
              <div class="me-3">
                <% if (messages.success) { %>
                  <i class="fas fa-check-circle fa-2x"></i>
                <% } else { %>
                  <i class="fas fa-exclamation-circle fa-2x"></i>
                <% } %>
              </div>
              <div class="flex-fill">
                <%= messages.success || messages.error %>
              </div>
            </div>
          </div>
        <% } %>
        <script>
        document.addEventListener('DOMContentLoaded', function() {
          const alert = document.getElementById('floating-alert');
          if(alert) {
            setTimeout(() => {
              alert.style.opacity = '0';
              alert.style.top = '0px';
              setTimeout(() => alert.remove(), 600);
            }, 3500);
          }
        });
        </script>
        <!-- Stats Cards -->
        <div class="row mb-4">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card h-100">
              <div class="card-body text-center">
                <div class="icon-bg mb-2"><i class="fas fa-book"></i></div>
                <div class="stat-label">Libros Disponibles</div>
                <div class="stat-value"><%= typeof totalLibros !== 'undefined' ? totalLibros : 0 %></div>
                <div class="stat-extra">en catálogo</div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card h-100">
              <div class="card-body text-center">
                <div class="icon-bg mb-2" style="background:linear-gradient(135deg,#22c55e 60%,#bef264 100%)"><i class="fas fa-exchange-alt"></i></div>
                <div class="stat-label" style="color:#22c55e">Préstamos Activos</div>
                <div class="stat-value"><%= typeof prestamosActivos !== 'undefined' ? prestamosActivos : 0 %></div>
                <div class="stat-extra">en curso</div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card h-100">
              <div class="card-body text-center">
                <div class="icon-bg mb-2" style="background:linear-gradient(135deg,#f59e42 60%,#fde68a 100%)"><i class="fas fa-exclamation-triangle"></i></div>
                <div class="stat-label" style="color:#f59e42">Préstamos Vencidos</div>
                <div class="stat-value"><%= typeof prestamosVencidos !== 'undefined' ? prestamosVencidos : 0 %></div>
                <div class="stat-extra">requieren atención</div>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card h-100">
              <div class="card-body text-center">
                <div class="icon-bg mb-2" style="background:linear-gradient(135deg,#0ea5e9 60%,#a5b4fc 100%)"><i class="fas fa-pen-fancy"></i></div>
                <div class="stat-label" style="color:#0ea5e9">Autores Registrados</div>
                <div class="stat-value"><%= typeof totalAutores !== 'undefined' ? totalAutores : 0 %></div>
                <div class="stat-extra">en sistema</div>
              </div>
            </div>
          </div>
        </div>

        

     <!-- Sección: Catálogo de Libros con Búsqueda Avanzada -->
<div id="libros" class="card shadow mb-5">
  <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
    <h5 class="mb-0 text-primary">
      <i class="fas fa-book me-2"></i>Catálogo de Libros
    </h5>
  </div>
  <div class="card-body">
    <% var libros = typeof libros !== 'undefined' ? libros : []; %>
    <% function chunk(array, size) {
      var results = [];
      for (var i = 0; i < array.length; i += size) {
        results.push(array.slice(i, i + size));
      }
      return results;
    } %>
    <% if (libros && libros.length > 0) { %>
      <div id="catalogoCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
          <% chunk(libros, 4).forEach(function(grupo, idx) { %>
            <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
              <div class="row justify-content-center">
                <% grupo.forEach(function(libro) { %>
                  <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
                    <div class="card h-100 shadow-sm m-2" style="width: 100%; min-width: 220px; max-width: 260px;">
                      <div class="position-relative">
                        <% let imgFile = libro.name && libro.name.toLowerCase().includes('guerra') ? 'artedela geurra.gif' :
                                        libro.name && libro.name.toLowerCase().includes('soledad') ? 'logo1cienañosdesoledad.avif' :
                                        libro.name && libro.name.toLowerCase().includes('harry') ? 'harrypotter.jpeg' :
                                        libro.name && libro.name.toLowerCase().includes('1984') ? 'logo1984.jpg' :
                                        'bibiotecalogo-removebg-preview.png'; %>
                        <img src="/images/<%= imgFile %>" class="card-img-top rounded-top" style="height: 200px; object-fit: cover">
                        <span class="position-absolute top-0 end-0 m-2 badge bg-info"><%= libro.category || 'Sin categoría' %></span>
                      </div>
                      <div class="card-body">
                        <h5 class="card-title"><%= libro.name %></h5>
                        <p class="card-text text-muted"><%= libro.author %></p>
                        <div class="d-flex justify-content-between align-items-center">
                          <span class="badge <%= libro.copies > 0 ? 'bg-success' : 'bg-secondary' %>"><%= libro.copies > 0 ? 'Disponible' : 'Prestado' %></span>
                          <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" title="Ver detalle">
                              <i class="fas fa-eye"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          <% }); %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#catalogoCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#catalogoCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Siguiente</span>
        </button>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <img src="/images/bibiotecalogo-removebg-preview.png" width="100" class="mb-3 opacity-50">
        <h5 class="text-muted">No hay libros registrados</h5>
        <p class="text-muted">Comienza agregando tu primer libro</p>
        <a href="/books/add" class="btn btn-primary">
          <i class="fas fa-plus-circle"></i> Agregar Libro
        </a>
      </div>
    <% } %>
  </div>
</div>
        <div>
          <footer class="app-footer">
            <div class="footer-bottom">
              <div class="copyright">
                &copy; 2023 Biblioteca Digital. Todos los derechos reservados.
              </div>
              <div class="legal-links">
                <a href="#" class="legal-link">Términos de servicio</a>
                <a href="#" class="legal-link">Política de privacidad</a>
                <a href="#" class="legal-link">Aviso legal</a>
              </div>
            </div>
          </footer>
        </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function() {
      // Inicializar DataTable para libros
      $('#booksTable').DataTable({
        language: {
          url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
        },
        dom: '<"top"f>rt<"bottom"lip><"clear">',
        responsive: true
      });

      // Búsqueda global
      $('#globalSearch').on('keyup', function() {
        $('#booksTable').DataTable().search(this.value).draw();
      });

      // Cargar categorías dinámicamente
      const categories = ['Novela', 'Ciencia Ficción', 'Historia', 'Poesía', 'Biografía', 'Infantil'];
      const $container = $('#categoriesContainer');
      
      categories.forEach(category => {
        $container.append(`
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body d-flex justify-content-between align-items-center">
                <span>${category}</span>
                <div>
                  <button class="btn btn-sm btn-outline-primary me-1 edit-category">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn btn-sm btn-outline-danger delete-category">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        `);
      });

      // Simular préstamos
      $('.btn-loan').on('click', function() {
        const bookTitle = $(this).closest('tr').find('td:eq(1)').text();
        $('#newLoanModal').modal('show');
        $('#newLoanModal .modal-title').text(`Préstamo: ${bookTitle}`);
      });
    });

    document.addEventListener('DOMContentLoaded', function() {
      var carousel = document.querySelector('#catalogoCarousel');
      if (carousel) {
        var bsCarousel = new bootstrap.Carousel(carousel, {
          interval: 3000,
          ride: 'carousel',
          pause: false
        });
      }
    });
  </script>

  
</body>
</html>