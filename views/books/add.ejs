<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Agregar Libro</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/add-book.css" rel="stylesheet">
</head>
<body class="d-flex justify-content-center align-items-center min-vh-100">

  <% if (messages && (messages.success || messages.error)) { %>
  <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
    <div class="d-flex align-items-center">
      <div class="me-3">
        <% if (messages.success) { %>
          <i class="fas fa-check-circle fa-2x"></i>
        <% } else { %>
          <i class="fas fa-exclamation-circle fa-2x"></i>
        <% } %>
      </div>
      <div class="flex-fill">
        <%= messages.success || messages.error %>
      </div>
    </div>
  </div>
  <% } %>

  <div class="card shadow w-100 mx-3" style="max-width: 600px;">
    <div class="card-header text-center">
      <i class="fas fa-book me-2"></i>Agregar Nuevo Libro
    </div>
    <div class="card-body p-4">
      <form action="/books/add" method="post" id="bookForm" novalidate>
        <div class="mb-4">
          <label class="form-label">ISBN:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-barcode"></i></span>
            <input type="text" class="form-control <%= messages.fieldErrors?.isbn ? 'is-invalid' : '' %>" name="isbn" value="<%= isbn %>" placeholder="ISBN del libro" required>
            <% if (messages.fieldErrors?.isbn) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.isbn %>
              </div>
            <% } %>
          </div>
        </div>

        <div class="mb-4">
          <label class="form-label">Título del Libro:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-heading"></i></span>
            <input type="text" class="form-control <%= messages.fieldErrors?.name ? 'is-invalid' : '' %>" 
                   name="name" value="<%= name %>" placeholder="Ingresa el título del libro" required>
            <% if (messages.fieldErrors?.name) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.name %>
              </div>
            <% } %>
          </div>
        </div>

        <div class="mb-4">
          <label class="form-label">Autor:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-user-pen"></i></span>
            <select class="form-control <%= messages.fieldErrors?.author ? 'is-invalid' : '' %>" name="author" required>
              <option value="">Selecciona un autor</option>
              <% if (autores && autores.length) { %>
                <% autores.forEach(function(autor) { %>
                  <option value="<%= autor.name %>" <%= author === autor.name ? 'selected' : '' %>><%= autor.name %></option>
                <% }) %>
              <% } %>
            </select>
            <% if (messages.fieldErrors?.author) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.author %>
              </div>
            <% } %>
          </div>
        </div>

        <div class="mb-4">
          <label class="form-label">Editorial:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-building"></i></span>
            <select class="form-control <%= messages.fieldErrors?.editorial ? 'is-invalid' : '' %>" name="editorial" required>
              <option value="">Selecciona una editorial</option>
              <% if (editoriales && editoriales.length) { %>
                <% editoriales.forEach(function(ed) { %>
                  <option value="<%= ed.editorial ? ed.editorial : ed.name %>" <%= editorial === (ed.editorial ? ed.editorial : ed.name) ? 'selected' : '' %>><%= ed.editorial ? ed.editorial : ed.name %></option>
                <% }) %>
              <% } %>
            </select>
            <% if (messages.fieldErrors?.editorial) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.editorial %>
              </div>
            <% } %>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">Año de Publicación:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-calendar-days"></i></span>
            <input type="number" class="form-control <%= messages.fieldErrors?.year ? 'is-invalid' : '' %>" name="year" min="1000" max="<%= new Date().getFullYear() %>" value="<%= year %>" placeholder="Año de publicación" required>
            <% if (messages.fieldErrors?.year) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.year %>
              </div>
            <% } %>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">Número de Páginas:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-file-alt"></i></span>
            <input type="number" class="form-control <%= messages.fieldErrors?.pages ? 'is-invalid' : '' %>" name="pages" min="1" value="<%= pages %>" placeholder="Cantidad de páginas" required>
            <% if (messages.fieldErrors?.pages) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.pages %>
              </div>
            <% } %>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">Número de Ejemplares:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-layer-group"></i></span>
            <input type="number" class="form-control <%= messages.fieldErrors?.copies ? 'is-invalid' : '' %>" name="copies" min="1" value="<%= copies %>" placeholder="Ejemplares disponibles" required>
            <% if (messages.fieldErrors?.copies) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.copies %>
              </div>
            <% } %>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">Categoría:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-tags"></i></span>
            <select class="form-control <%= messages.fieldErrors?.category ? 'is-invalid' : '' %>" name="category" required>
              <option value="">Selecciona una categoría</option>
              <% if (categorias && categorias.length) { %>
                <% categorias.forEach(function(cat) { %>
                  <option value="<%= cat.name %>" <%= category === cat.name ? 'selected' : '' %>><%= cat.name %></option>
                <% }) %>
              <% } %>
            </select>
            <% if (messages.fieldErrors?.category) { %>
              <div class="invalid-feedback">
                <%= messages.fieldErrors.category %>
              </div>
            <% } %>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">
          <span class="spinner-border spinner-border-sm loading" role="status"></span>
          <span class="submit-text">Agregar Libro</span>
        </button>
      </form>
    </div>
  </div>

  <!-- Scripts locales para evitar errores de CSP -->
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/books.js"></script>
  <script>
    document.getElementById('bookForm').addEventListener('submit', function(e) {
      const btn = this.querySelector('button[type="submit"]');
      btn.disabled = true;
      btn.querySelector('.submit-text').textContent = 'Agregando...';
      btn.querySelector('.loading').style.display = 'inline-block';
    });

    document.addEventListener('DOMContentLoaded', function() {
      const alert = document.getElementById('floating-alert');
      if(alert) {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.top = '0px';
          setTimeout(() => alert.remove(), 600);
        }, 3500);
      }
    });
  </script>
</body>
</html>
