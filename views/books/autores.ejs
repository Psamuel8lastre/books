<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autores</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="autores-container">
    <nav class="sidebar">
      <div class="p-4">
        <h4 class="mb-4 text-center">
          <i class="fas fa-book-open me-2"></i>Biblioteca 
        </h4>
        <hr class="bg-light opacity-25">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">
              <i class="fas fa-book me-2"></i>Libros
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-exchange-alt me-2"></i>Préstamos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/autores">
              <i class="fas fa-pen-fancy me-2"></i>Autores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/editoriales">
              <i class="fas fa-building me-2"></i>Editoriales
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">
              <i class="fas fa-tags me-2"></i>Categorías
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <main class="autores-main-content w-100">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-pen-fancy me-2"></i>Lista de Autores</h2>
        <a href="/autores/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Nuevo Autor
        </a>
      </div>
      <% if (messages && (messages.success || messages.error)) { %>
        <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
          <div class="d-flex align-items-center">
            <div class="me-3">
              <% if (messages.success) { %>
                <i class="fas fa-check-circle fa-2x"></i>
              <% } else { %>
                <i class="fas fa-exclamation-circle fa-2x"></i>
              <% } %>
            </div>
            <div class="flex-fill">
              <%= messages.success || messages.error %>
            </div>
          </div>
        </div>
      <% } %>
      <% if (data.length) { %>
        <div class="autores-table table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>País</th>
                <th>Fecha de nacimiento</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(autor, i) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= autor.name %></td>
                  <td><%= autor.country || '-' %></td>
                  <td><%= autor.birthdate ? autor.birthdate.toLocaleString ? autor.birthdate.toLocaleString() : autor.birthdate : '-' %></td>
                  <td class="text-center">
                    <a href="/autores/edit/<%= autor.id %>" class="btn btn-sm btn-outline-success me-2">
                      <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/autores/delete/<%= autor.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro?')">
                      <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
          <h5 class="text-muted">No hay autores registrados</h5>
          <a href="/autores/add" class="btn btn-primary mt-3">
            <i class="fas fa-plus-circle"></i> Agregar Autor
          </a>
        </div>
      <% } %>
    </main>
  </div>
  <style>
    #floating-alert.custom-alert {
      position: fixed;
      top: 32px;
      right: 32px;
      z-index: 2000;
      margin: 0;
      min-width: 320px;
      max-width: 420px;
      opacity: 0.98;
      animation: fadeInDown 0.7s;
    }
    @media (max-width: 600px) {
      #floating-alert.custom-alert {
        right: 10px;
        top: 10px;
        min-width: 200px;
        max-width: 95vw;
      }
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 0.98; transform: translateY(0); }
    }
    .custom-alert {
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-size: 1.08rem;
      font-weight: 500;
      box-shadow: 0 4px 18px rgba(0,0,0,0.07);
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: opacity 0.5s, top 0.5s;
    }
    .custom-alert-danger {
      background: #fee2e2;
      color: #b91c1c;
      border-left: 6px solid #ef4444;
    }
    .custom-alert-success {
      background: #d1fae5;
      color: #065f46;
      border-left: 6px solid #10b981;
    }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const alert = document.getElementById('floating-alert');
      if(alert) {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.top = '0px';
          setTimeout(() => alert.remove(), 600);
        }, 3500);
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
