<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Autores</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="autores-container">
    <!-- Sidebar -->
    <div class="sidebar col-md-3 col-lg-2 p-0">
      <div class="p-4">
        <h4 class="mb-4 text-center">
          <i class="fas fa-book-open me-2"></i>Biblioteca 
        </h4>
        <hr class="bg-light opacity-25">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link " href="/">
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">
              <i class="fas fa-book me-2"></i>libros
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-exchange-alt me-2"></i>Préstamos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/autores">
              <i class="fas fa-pen-fancy me-2"></i>Autores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/editoriales">
              <i class="fas fa-building me-2"></i>Editoriales
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">
              <i class="fas fa-tags me-2"></i>Categorías
            </a>
          </li>
        </ul>
      </div>
    </div>

    <main class="autores-main-content w-100">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-pen-fancy me-2"></i>Lista de Autores</h2>
        <a href="/autores/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Nuevo Autor
        </a>
      </div>
      <% if (messages && (messages.success || messages.error)) { %>
        <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
          <div class="d-flex align-items-center">
            <div class="me-3">
              <% if (messages.success) { %>
                <i class="fas fa-check-circle fa-2x"></i>
              <% } else { %>
                <i class="fas fa-exclamation-circle fa-2x"></i>
              <% } %>
            </div>
            <div class="flex-fill">
              <%= messages.success || messages.error %>
            </div>
          </div>
        </div>
      <% } %>
      <% if (data.length) { %>
        <div class="autores-cards-list row g-4 animate-fade-in">
          <% data.forEach(function(autor, i) { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
              <div class="autores-card card h-100 text-center p-3 border-0 shadow-sm">
                <div class="autores-card-avatar mx-auto mb-3">
                  <span class="autores-avatar-circle">
                    <i class="fas fa-user-pen"></i>
                  </span>
                </div>
                <h5 class="fw-bold mb-1"><%= autor.name %></h5>
                <div class="text-muted mb-1"><i class="fas fa-flag me-1"></i> <%= autor.country || '-' %></div>
                <div class="text-secondary mb-3" style="font-size:0.98rem"><i class="fas fa-birthday-cake me-1"></i> <%= autor.birthdate ? autor.birthdate.toLocaleString ? autor.birthdate.toLocaleString() : autor.birthdate : '-' %></div>
                <div class="d-flex justify-content-center gap-2 mt-auto">
                  <a href="/autores/edit/<%= autor.id %>" class="btn btn-sm btn-outline-success px-3">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/autores/delete/<%= autor.id %>" class="btn btn-sm btn-outline-danger px-3" onclick="return confirm('¿Estás seguro?')">
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
          <h5 class="text-muted">No hay autores registrados</h5>
          <a href="/autores/add" class="btn btn-primary mt-3">
            <i class="fas fa-plus-circle"></i> Agregar Autor
          </a>
        </div>
      <% } %>
    </main>
  </div>
  <style>
    #floating-alert.custom-alert {
      position: fixed;
      top: 32px;
      right: 32px;
      z-index: 2000;
      margin: 0;
      min-width: 320px;
      max-width: 420px;
      opacity: 0.98;
      animation: fadeInDown 0.7s;
    }
    @media (max-width: 600px) {
      #floating-alert.custom-alert {
        right: 10px;
        top: 10px;
        min-width: 200px;
        max-width: 95vw;
      }
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 0.98; transform: translateY(0); }
    }
    .custom-alert {
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-size: 1.08rem;
      font-weight: 500;
      box-shadow: 0 4px 18px rgba(0,0,0,0.07);
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: opacity 0.5s, top 0.5s;
    }
    .custom-alert-danger {
      background: #fee2e2;
      color: #b91c1c;
      border-left: 6px solid #ef4444;
    }
    .custom-alert-success {
      background: #d1fae5;
      color: #065f46;
      border-left: 6px solid #10b981;
    }
    .autores-cards-list {
      margin-top: 12px;
    }
    .autores-card {
      border-radius: 1.2rem;
      background: #a7bad7;
      box-shadow: 0 2px 12px 0 rgba(99,102,241,0.10);
      transition: transform 0.18s, box-shadow 0.18s;
      min-height: 180px;
      max-width: 260px;
      margin-left: auto;
      margin-right: auto;
      padding: 1.2rem 0.7rem 1rem 0.7rem;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .autores-card:hover {
      transform: translateY(-6px) scale(1.03);
      box-shadow: 0 8px 32px 0 rgba(16,185,129,0.13);
    }
    .autores-card-avatar {
      margin-top: -28px;
    }
    .autores-avatar-circle {
      width: 48px;
      height: 48px;
      font-size: 1.3rem;
      border: 3px solid #fff;
    }
    .autores-card h5 {
      font-size: 1.08rem;
    }
    .autores-card .text-muted,
    .autores-card .text-secondary {
      font-size: 0.92rem;
    }
    @media (max-width: 600px) {
      .autores-card { min-height: 120px; max-width: 98vw; border-radius: 0.7rem; padding: 0.7rem 0.3rem 0.7rem 0.3rem; }
      .autores-avatar-circle { width: 36px; height: 36px; font-size: 1rem; }
    }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const alert = document.getElementById('floating-alert');
      if(alert) {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.top = '0px';
          setTimeout(() => alert.remove(), 600);
        }, 3500);
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
