<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Editoriales</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="autores-container">
    <nav class="sidebar">
      <div class="p-4">
        <h4 class="mb-4 text-center">
          <i class="fas fa-book-open me-2"></i>Biblioteca 
        </h4>
        <hr class="bg-light opacity-25">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">
              <i class="fas fa-book me-2"></i>Libros
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-exchange-alt me-2"></i>Préstamos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/autores">
              <i class="fas fa-pen-fancy me-2"></i>Autores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/editoriales">
              <i class="fas fa-building me-2"></i>Editoriales
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">
              <i class="fas fa-tags me-2"></i>Categorías
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <main class="autores-main-content w-100">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-building me-2"></i>Lista de Editoriales</h2>
        <a href="/editoriales/add" class="btn btn-primary">
          <i class="fas fa-plus"></i> Nueva Editorial
        </a>
      </div>
      <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
      <% } %>
      <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
      <% } %>
      <% if (data.length) { %>
        <div class="autores-table table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>País</th>
                <th>Creado</th>
                <th>Actualizado</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(function(editorial, i) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= editorial.name %></td>
                  <td><%= editorial.country || '-' %></td>
                  <td><%= editorial.created_at ? editorial.created_at.toLocaleString ? editorial.created_at.toLocaleString() : editorial.created_at : '-' %></td>
                  <td><%= editorial.updated_at ? editorial.updated_at.toLocaleString ? editorial.updated_at.toLocaleString() : editorial.updated_at : '-' %></td>
                  <td class="text-center">
                    <a href="/editoriales/edit/<%= editorial.id %>" class="btn btn-sm btn-outline-success me-2">
                      <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/editoriales/delete/<%= editorial.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro?')">
                      <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-5">
          <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
          <h5 class="text-muted">No hay editoriales registradas</h5>
          <a href="/editoriales/add" class="btn btn-primary mt-3">
            <i class="fas fa-plus-circle"></i> Agregar Editorial
          </a>
        </div>
      <% } %>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
