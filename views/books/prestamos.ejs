<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Préstamos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="fas fa-exchange-alt me-2"></i>Lista de Préstamos</h2>
      <a href="/prestamos/add" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Préstamo
      </a>
    </div>
    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (data.length) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Libro</th>
              <th>Usuario</th>
              <th>Fecha Préstamo</th>
              <th>Fecha Devolución</th>
              <th>Estado</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(prestamo, i) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= prestamo.libro %></td>
                <td><%= prestamo.usuario %></td>
                <td><%= prestamo.fecha_prestamo ? prestamo.fecha_prestamo.toLocaleString ? prestamo.fecha_prestamo.toLocaleString() : prestamo.fecha_prestamo : '-' %></td>
                <td><%= prestamo.fecha_devolucion ? prestamo.fecha_devolucion.toLocaleString ? prestamo.fecha_devolucion.toLocaleString() : prestamo.fecha_devolucion : '-' %></td>
                <td><%= prestamo.estado || '-' %></td>
                <td class="text-center">
                  <a href="/prestamos/edit/<%= prestamo.id %>" class="btn btn-sm btn-outline-success me-2">
                    <i class="fas fa-edit"></i> Editar
                  </a>
                  <a href="/prestamos/delete/<%= prestamo.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro?')">
                    <i class="fas fa-trash-alt"></i> Eliminar
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
        <h5 class="text-muted">No hay préstamos registrados</h5>
        <a href="/prestamos/add" class="btn btn-primary mt-3">
          <i class="fas fa-plus-circle"></i> Agregar Préstamo
        </a>
      </div>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
