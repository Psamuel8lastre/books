<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Agregar Autor</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/autores_add.css">
</head>
<body class="d-flex justify-content-center align-items-center min-vh-100">
  <% if (messages && (messages.success || messages.error)) { %>
  <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
    <div class="d-flex align-items-center">
      <div class="me-3">
        <% if (messages.success) { %>
          <i class="fas fa-check-circle fa-2x"></i>
        <% } else { %>
          <i class="fas fa-exclamation-circle fa-2x"></i>
        <% } %>
      </div>
      <div class="flex-fill">
        <%= messages.success || messages.error %>
      </div>
    </div>
  </div>
  <% } %>
  <div class="card shadow w-100 mx-3" style="max-width: 600px;">
    <div class="card-header text-center">
      <i class="fas fa-pen-fancy me-2"></i>Agregar Nuevo Autor
    </div>
    <div class="card-body p-4">
      <form action="/autores/add" method="post" id="autorForm" novalidate>
        <div class="mb-4">
          <label class="form-label">Nombre del Autor:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-heading"></i></span>
            <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Nombre del autor" required>
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">País:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-globe"></i></span>
            <input type="text" class="form-control" name="country" value="<%= country %>" placeholder="País de origen">
          </div>
        </div>
        <div class="mb-4">
          <label class="form-label">Fecha de nacimiento:</label>
          <div class="input-group">
            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
            <input type="date" class="form-control" name="birthdate" value="<%= birthdate %>">
          </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">
          <span class="submit-text">Agregar Autor</span>
        </button>
      </form>
    </div>
  </div>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const alert = document.getElementById('floating-alert');
    if(alert) {
      setTimeout(() => {
        alert.style.opacity = '0';
        alert.style.top = '0px';
        setTimeout(() => alert.remove(), 600);
      }, 3500);
    }
  });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
