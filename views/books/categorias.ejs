<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Categorías</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="fas fa-tags me-2"></i>Lista de Categorías</h2>
      <a href="/categorias/add" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nueva Categoría
      </a>
    </div>
    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (data.length) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Nombre</th>
              <th>Descripción</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(categoria, i) { %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= categoria.name %></td>
                <td><%= categoria.description || '-' %></td>
                <td class="text-center">
                  <a href="/categorias/edit/<%= categoria.id %>" class="btn btn-sm btn-outline-success me-2">
                    <i class="fas fa-edit"></i> Editar
                  </a>
                  <a href="/categorias/delete/<%= categoria.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro?')">
                    <i class="fas fa-trash-alt"></i> Eliminar
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
        <h5 class="text-muted">No hay categorías registradas</h5>
        <a href="/categorias/add" class="btn btn-primary mt-3">
          <i class="fas fa-plus-circle"></i> Agregar Categoría
        </a>
      </div>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
