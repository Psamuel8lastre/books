<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Biblioteca Digital</title>
  <!-- Bootstrap CSS -->
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="app-container">
    <!-- Sidebar -->
    <nav class="sidebar">
      <div class="p-4">
        <h4 class="mb-4 text-center">
          <i class="fas fa-book-open me-2"></i>Biblioteca 
        </h4>
        <hr class="bg-light opacity-25">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link " href="/">
              <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
          </li>
          <li class="nav-item ">
            <a class="nav-link active" href="/books">
              <i class="fas fa-book me-2"></i>Libros
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-exchange-alt me-2"></i>Préstamos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/autores">
              <i class="fas fa-pen-fancy me-2"></i>Autores
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/editoriales">
              <i class="fas fa-building me-2"></i>Editoriales
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">
              <i class="fas fa-tags me-2"></i>Categorías
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Contenido Principal -->
    <main class="main-content">
      <!-- Banner -->
      <div class="banner bg-primary text-white py-5 mb-4 text-center">
        <h1 class="display-4"><i class="fas fa-book-open mr-3"></i> Biblioteca Digital</h1>
        <p class="lead">Gestiona tu colección de libros favoritos</p>
        <a href="/books/add" class="btn btn-light btn-lg mt-3">
          <i class="fas fa-plus-circle"></i> Agregar Libro
        </a>
      </div>

      <!-- Mensajes Flash -->
      <% if (messages && (messages.success || messages.error)) { %>
        <div id="floating-alert" class="custom-alert <%= messages.success ? 'custom-alert-success' : 'custom-alert-danger' %>">
          <div class="d-flex align-items-center">
            <div class="me-3">
              <% if (messages.success) { %>
                <i class="fas fa-check-circle fa-2x"></i>
              <% } else { %>
                <i class="fas fa-exclamation-circle fa-2x"></i>
              <% } %>
            </div>
            <div class="flex-fill">
              <%= messages.success || messages.error %>
            </div>
          </div>
        </div>
      <% } %>

      <div class="card shadow-sm">
        <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-center bg-white">
          <h3 class="mb-3 mb-md-0"><i class="fas fa-list-ul text-primary mr-2"></i>Lista de Libros</h3>
          <div class="d-flex flex-column flex-md-row align-items-center w-100 w-md-auto">
            <form class="d-flex mb-2 mb-md-0 mr-md-2 w-100" onsubmit="return validateSearch()">
              <div class="input-group">
                <input class="form-control" type="search" placeholder="Buscar libro..." aria-label="Search" id="searchInput">
                <div class="input-group-append">
                  <button class="btn btn-outline-primary" type="submit">
                    <i class="fas fa-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <% if(data.length) { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="thead-light">
                <tr>
                  <th>#</th>
                  <th>Nombre</th>
                  <th>Autor</th>
                  <th class="text-center">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < data.length; i++) { %>
                  <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].author %></td>
                    <td class="text-center">
                      <a href="../books/edit/<%= data[i].id %>" class="btn btn-sm btn-outline-success mr-2">
                        <i class="fas fa-edit"></i> Editar
                      </a>
                      <a href="../books/delete/<%= data[i].id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro?')">
                        <i class="fas fa-trash-alt"></i> Eliminar
                      </a>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/2748/2748558.png" width="100" class="mb-3 opacity-50">
            <h5 class="text-muted">No hay libros registrados</h5>
            <p class="text-muted">Comienza agregando tu primer libro</p>
            <a href="/books/add" class="btn btn-primary">
              <i class="fas fa-plus-circle"></i> Agregar Libro
            </a>
          </div>
        <% } %>
      </div>
    </main>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script>
    function validateSearch() {
      const input = document.getElementById('searchInput').value.trim();
      if (!input) {
        alert('Por favor, ingresa un término de búsqueda.');
        return false;
      }
      return true;
    }
  </script>
  <style>
    #floating-alert.custom-alert {
      position: fixed;
      top: 32px;
      right: 32px;
      z-index: 2000;
      margin: 0;
      min-width: 320px;
      max-width: 420px;
      opacity: 0.98;
      animation: fadeInDown 0.7s;
    }
    @media (max-width: 600px) {
      #floating-alert.custom-alert {
        right: 10px;
        top: 10px;
        min-width: 200px;
        max-width: 95vw;
      }
    }
    @keyframes fadeInDown {
      from { opacity: 0; transform: translateY(-30px); }
      to { opacity: 0.98; transform: translateY(0); }
    }
    .custom-alert {
      border-radius: 12px;
      padding: 1rem 1.5rem;
      font-size: 1.08rem;
      font-weight: 500;
      box-shadow: 0 4px 18px rgba(0,0,0,0.07);
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: opacity 0.5s, top 0.5s;
    }
    .custom-alert-danger {
      background: #fee2e2;
      color: #b91c1c;
      border-left: 6px solid #ef4444;
    }
    .custom-alert-success {
      background: #d1fae5;
      color: #065f46;
      border-left: 6px solid #10b981;
    }
    /* --- ESTILOS MODERNOS PARA LA VISTA DE LIBROS --- */
    .banner {
      background: linear-gradient(90deg, #6366f1 0%, #10b981 100%);
      color: #fff !important;
      border-radius: 1.5rem;
      box-shadow: 0 6px 32px 0 rgba(99,102,241,0.10);
      margin-bottom: 2.5rem;
      padding: 2.5rem 1rem 2.5rem 1rem;
      position: relative;
      overflow: hidden;
    }
    .banner h1 {
      font-weight: 800;
      letter-spacing: 1px;
      text-shadow: 0 2px 8px #6366f133;
    }
    .banner .lead {
      font-size: 1.2rem;
      color: #e0e7ff;
      margin-bottom: 1.2rem;
    }
    .banner .btn {
      font-weight: 600;
      border-radius: 8px;
      box-shadow: 0 2px 8px #6366f122;
      background: #fff;
      color: #6366f1;
      border: none;
      transition: box-shadow 0.3s, transform 0.3s, background 0.3s;
    }
    .banner .btn:hover {
      background: #f0fdf4;
      color: #10b981;
      transform: scale(1.06) translateY(-2px);
      box-shadow: 0 6px 18px #10b98155;
    }
    .card.shadow-sm {
      border-radius: 1.2rem;
      box-shadow: 0 4px 24px 0 rgba(99,102,241,0.10);
      border: none;
    }
    .card-header {
      background: #fff;
      border-radius: 1.2rem 1.2rem 0 0;
      border-bottom: 1px solid #f1f5f9;
      padding: 1.2rem 1.5rem;
    }
    .table {
      background: #fff;
      border-radius: 0 0 1.2rem 1.2rem;
      overflow: hidden;
    }
    .table thead {
      background: linear-gradient(90deg, #6366f1 0%, #10b981 100%);
      color: #fff;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    .table tbody tr {
      transition: background 0.2s;
    }
    .table tbody tr:hover {
      background: #f0fdf4;
    }
    .btn-outline-success, .btn-outline-danger {
      border-radius: 6px;
      font-weight: 500;
      transition: box-shadow 0.2s, transform 0.2s;
    }
    .btn-outline-success:hover {
      background: #10b981;
      color: #fff;
      border-color: #10b981;
      box-shadow: 0 2px 8px #10b98133;
      transform: scale(1.05);
    }
    .btn-outline-danger:hover {
      background: #ef4444;
      color: #fff;
      border-color: #ef4444;
      box-shadow: 0 2px 8px #ef444433;
      transform: scale(1.05);
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .table th {
      font-size: 1.05rem;
    }
    .table td {
      font-size: 1rem;
    }
    .text-center.py-5 img {
      filter: drop-shadow(0 2px 8px #10b98133);
    }
    .text-center.py-5 h5 {
      color: #6366f1;
      font-weight: 600;
    }
    .text-center.py-5 p {
      color: #7c3aed;
      font-size: 1.08rem;
    }
    @media (max-width: 600px) {
      .banner { border-radius: 0.7rem; padding: 1.2rem 0.5rem; }
      .card-header { border-radius: 0.7rem 0.7rem 0 0; padding: 0.7rem 0.7rem; }
      .table { border-radius: 0 0 0.7rem 0.7rem; }
    }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const alert = document.getElementById('floating-alert');
      if(alert) {
        setTimeout(() => {
          alert.style.opacity = '0';
          alert.style.top = '0px';
          setTimeout(() => alert.remove(), 600);
        }, 3500);
      }
    });
  </script>
</body>
</html>